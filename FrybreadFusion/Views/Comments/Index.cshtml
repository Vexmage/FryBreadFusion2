@model IEnumerable<FrybreadFusion.Models.Comment>

@{
    ViewData["Title"] = "All Comments";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Comment</th>
                <th>Date Posted</th>
                <th></th> <!-- Empty header for the actions column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.UserName</td>
                    <td>@comment.UserComment</td>
                    <td>@comment.DatePosted.ToString("yyyy-MM-dd")</td>
                    <td>
                        <!-- Delete action form -->
                        <form asp-action="DeleteComment" asp-controller="Comments" asp-route-id="@comment.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No comments have been posted yet.</p>
}
<div class="mt-3">
    <a href="@Url.Action("Index", "Blog")" class="btn btn-primary">Back to Blog</a>
</div>
