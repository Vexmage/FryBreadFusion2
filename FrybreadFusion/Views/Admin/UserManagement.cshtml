@model FrybreadFusion.ViewModels.UserManagementViewModel

<h2>User Management</h2>

<table class="table table-dark-mode">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr> 
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="DeleteUser" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>


                    <form asp-controller="Admin" asp-action="AddToAdmin" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <button type="submit" class="btn btn-primary">Add to Admin</button>
                    </form>


                    <form asp-action="RemoveFromAdmin" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <button type="submit" class="btn btn-secondary">Remove from Admin</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
